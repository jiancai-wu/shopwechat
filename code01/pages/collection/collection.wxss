/* pages/collection/collection.wxss */
/* 商品列表 */
page{
    background-color: #f8f8f8;
}
.collect{
    margin: 10px 0;
}
.goods_list{
    height: 100px;
    padding-left: 100px;
    position: relative;
    border-bottom: 1px solid #e5e5e5;
    
}
.left{
    position: absolute;
    top: 10px;
    left: 10px;
}
.left image{
    width: 80px;
    height: 80px;
}
.right{
    padding: 10px 0;
    height: 80px;
    overflow: hiddle;
}
.goods_name{
    font-size: 14px;
}
.goods_address{
    color: #929292;
    font-size: 12px;

}
.goods_price{
    font-size: 14px;
    color: #f47378;
    width:100%;
    line-height: 22px;
    height: 22px;
    margin-top: 5px;
}
.cart image{
    width: 20px;
    height: 20px;
    position: absolute;
    right: 10px;
    bottom: 10px;
}
.del{
    width: 15px;
    height: 15px;
    font-size: 15px;
    text-align: center;
    line-height: 13px;
    border: 1px solid #f47378;
    color: #f47378;
    border-radius: 50%;
    position: absolute;
    top: 10px;
    right: 10px;
}

.empty .text{
    width: 100%;
    height: 150px;
    background-color: #fff;
    text-align: center;
    /* line-height: 100px; */
    font-size: 16px;
    position: relative;

}
.box{
    height: 40px;
    line-height: 20px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto auto;
}
.empty .text .getindex{
    font-size: 15px;
    color: rgb(31, 111, 231);
    cursor: pointer;
    text-decoration: underline;
}
.like{
    height: 40px;
    font-size: 18px;
    margin: 15px;
}
.likeBox{
    line-height: 20px;
    text-align: center;

}
.allLike{
    font-size: 14px;
    color: rgb(160, 154, 154);
}
/* 商品列表 */
.goods_listBox{
    margin-bottom: 50px
}
.goods_lists{
    width: 50%;
    position: relative;
    /* margin: 0 5%; */
    display: inline-block;
    
    
}
.goods_lists:nth-last-child(1){
    margin-bottom: 10px;
}
.img{
    width: 93%;
    margin: 10px 0 0 5%;
    background-color: #fff;
    border-radius: 6px 6px 0 0 ;
}
.goods_lists:nth-child(2n) .img{
    margin-left: 3%;
    
}

.img image{
    width: 100%;
    height: 128px;
    border-radius: 6px 6px 0 0 ;
    
}
/* .right{
    padding: 10px 0;
    height: 80px;
    overflow: hiddle;
} */
.goodsinfo{
    width: 93%;
    margin-left: 5%;
    background-color: #fff;
    box-shadow: 5px 9px 10px -10px #737373;
    border-radius: 0 0 8px 8px  ;
    padding: 7px;
    box-sizing: border-box;
}
.goods_lists:nth-child(2n) .goodsinfo{
    margin-left: 3%;
}
.goods_name{
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    
}
.goods_address{
    margin-top: 5px;
    color: #929292;
    font-size: 12px;

}
.goods_price{
    font-size: 14px;
    color: #cf363b;
    width:100%;
    line-height: 22px;
    height: 22px;
    margin-top: 5px;
}
.cart image{
    width: 20px;
    height: 20px;
    position: absolute;
    right: 15px;
    bottom: 5px;
}