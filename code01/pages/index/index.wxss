/**index.wxss**/
page{
    background-color: #F5F6F7;
}
swiper swiper-item{
    width: 100%;
    height: 150px;
}
swiper swiper-item image{
    width: 100%;
    height: 180px;
}
.category{
    background-color: #fff;
    padding: 15px 0 10px 0px;

}
.category .item{
    width: 25%;
    float: left;
    
}

.line{
    background: #F5F6F7;
    height: 10px;
}
.icon_wrap{
    
    width: 40px;
    margin: 0 auto;
}
.icon_wrap image{
    width: 40px;
    height: 40px;
    margin-top: 10px;
}
.icon_wrap text{
    display: block;
    font-size: 13px;
    width: 40px;
    text-align: center;
    color: #737373;
}
.common_title{
    padding: 10px;
    font-size: 16px;
    border-bottom: 1px solid #ccc;
    background-color: #fff;
    text-align: center;
    color: #929292
}
/* 商品列表 */
.goods_list{
    width: 50%;
    position: relative;
    /* margin: 0 5%; */
    display: inline-block;
    
    
}
.goods_list:nth-last-child(1){
    margin-bottom: 10px;
}
.img{
    width: 93%;
    margin: 10px 0 0 5%;
    background-color: #fff;
    border-radius: 6px 6px 0 0 ;
}
.goods_list:nth-child(2n) .img{
    margin-left: 3%;
    
}

.img image{
    width: 100%;
    height: 128px;
    border-radius: 6px 6px 0 0 ;
    
}
/* .right{
    padding: 10px 0;
    height: 80px;
    overflow: hiddle;
} */
.goodsinfo{
    width: 93%;
    margin-left: 5%;
    background-color: #fff;
    box-shadow: 5px 9px 10px -10px #737373;
    border-radius: 0 0 8px 8px  ;
    padding: 7px;
    box-sizing: border-box;
}
.goods_list:nth-child(2n) .goodsinfo{
    margin-left: 3%;
}
.goods_name{
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    
}
.goods_address{
    margin-top: 5px;
    color: #929292;
    font-size: 12px;

}
.goods_price{
    font-size: 14px;
    color: #cf363b;
    width:100%;
    line-height: 22px;
    height: 22px;
    margin-top: 5px;
}
.cart image{
    width: 20px;
    height: 20px;
    position: absolute;
    right: 15px;
    bottom: 5px;
}